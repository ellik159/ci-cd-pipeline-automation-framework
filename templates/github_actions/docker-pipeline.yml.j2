name: {{ workflow_name }}

on:
{%- for trigger in triggers %}
  {{ trigger }}:
    branches: [ main, develop ]
{%- endfor %}

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v3
    
    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v2
    
    - name: Build Docker image
      run: |
        docker build -t app:{% raw %}${{ github.sha }}{% endraw %} .
    
    {% if has_tests %}
    - name: Run tests in container
      run: |
        docker run app:{% raw %}${{ github.sha }}{% endraw %} pytest tests/ -v
    {% endif %}
    
    {% if security.get('trivy_enabled', True) %}
    - name: Run Trivy vulnerability scanner
      uses: aquasecurity/trivy-action@master
      with:
        image-ref: 'app:{% raw %}${{ github.sha }}{% endraw %}'
        format: 'sarif'
        output: 'trivy-results.sarif'
    
    - name: Upload Trivy results to GitHub Security
      uses: github/codeql-action/upload-sarif@v2
      if: always()
      with:
        sarif_file: 'trivy-results.sarif'
    {% endif %}
    
    - name: Login to Docker Hub
      if: github.event_name == 'push' && github.ref == 'refs/heads/main'
      uses: docker/login-action@v2
      with:
        username: {% raw %}${{ secrets.DOCKER_USERNAME }}{% endraw %}
        password: {% raw %}${{ secrets.DOCKER_PASSWORD }}{% endraw %}
    
    - name: Push to Docker Hub
      if: github.event_name == 'push' && github.ref == 'refs/heads/main'
      run: |
        docker tag app:{% raw %}${{ github.sha }}{% endraw %} {% raw %}${{ secrets.DOCKER_USERNAME }}{% endraw %}/app:latest
        docker push {% raw %}${{ secrets.DOCKER_USERNAME }}{% endraw %}/app:latest
